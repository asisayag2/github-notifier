# GitHub Personal Access Token (classic) with `repo` scope
GITHUB_TOKEN=ghp_your_token_here

# Resend API key (https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# With Resend free tier + onboarding@resend.dev, you can only send TO the email
# you signed up with. Use config.yml email_to to match, or verify your domain.

# Email sender (default: onboarding@resend.dev; use verified domain for custom)
# EMAIL_FROM=GitHub Notifier <notifications@yourdomain.com>

# PostgreSQL connection string
# For docker-compose: postgresql://notifier:YOUR_PASSWORD@db:5432/notifier
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Database password (used by docker-compose to create the Postgres container)
DB_PASSWORD=choose_a_strong_password

# How often to poll GitHub for PR updates (in milliseconds, default: 120000 = 2 min)
POLL_INTERVAL_MS=120000

# --- Optional (only needed if using webhook mode instead of polling) ---
# WEBHOOK_SECRET=your_webhook_secret_here
